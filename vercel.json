{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(animals|weights|inventory|kpi|dashboard|customers|suppliers|receptions|financial-reports|reports|cost-centers|transactions|goals|.*)",
      "dest": "/index.html"
    }
  ]
}